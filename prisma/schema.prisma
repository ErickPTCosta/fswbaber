// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String    @id @default(uuid())
  name    String
  Booking Booking[]
}

model Babershop {
  id       String    @id @default(uuid())
  name     String
  address  String
  imageUrl String
  Service  Service[]
  Booking  Booking[]
}

model Service {
  id          String    @id @default(uuid())
  name        String
  price       Decimal   @db.Decimal(10, 2)
  babershopID String
  babershop   Babershop @relation(fields: [babershopID], references: [id])
  description String
  Booking     Booking[]
}

model Booking {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  serviceId   String
  service     Service   @relation(fields: [serviceId], references: [id])
  date        DateTime
  baberShopId String
  babershop   Babershop @relation(fields: [baberShopId], references: [id])
}
